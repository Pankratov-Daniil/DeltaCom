<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping">
    <class name="com.deltacom.app.entity.Option" table="`option`">

        <id name="id" column="idOption">
            <generator class="increment"/>
        </id>
        <property name="name" column="nameOption"/>
        <property name="price" column="priceOption"/>
        <property name="connectionCost" column="connectionCostOption"/>
    </class>
</hibernate-mapping>
